.mine_container {
  background: tomato;
  padding: 50rpx 0;
  height: 400rpx;
}
 
.header_container .avatar {
  margin: 0 auto;
  text-align: center;
}
 
.header_container .avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.header_container button{
  width: 280rpx;
}
 
.header_container .username_text {
  text-align: center;
  color: #fff;
  margin-top: 10rpx;
}

.all_list{
  display: flex;
  flex-direction: column;
  height: 360rpx;
  background-color: blue;
  margin-top: 40rpx;
}

.all_list .feature_item{
  flex: 1;
  width: 100%;
  height: 119rpx;
  line-height: 120rpx;
  display: flex;
  padding: 20rpx;
  /* justify-content: space-around; */
}

.all_list .feature_item .feature_img image{
  width: 60rpx;
  height: 60rpx;
}

.all_list .feature_item .feature_text{
  margin-left: -65%;
  flex: 1;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.all_list .feature_item .arrow{
  margin-top: -12rpx;
  margin-right: -15rpx;
}

.all_list .feature_item .arrow image{
  width: 50rpx;
  height: 50rpx;
}

/*分割线样式*/
.divLine{
 background-color: lightgray;
 width: 100%;
 height: 3rpx;
}
 
.aftersale{
  display: flex;
  height: 400rpx;
  flex-direction: column;
}

.aftersale button{
  display: flex;
  width: 100%;
  background-color: #fff;
  font-size: 32rpx;
  height: 110rpx;
  line-height: 110rpx;
}

.aftersale image{
  width: 55rpx;
  height: 55rpx;
}

.aftersale .service .service_icon,.feedback .feedback_icon{
  margin-top: -5rpx;
  margin-left: -28rpx;
}

.aftersale .service .service_text,.feedback .feedback_text{
  flex: 1;
  margin-left: -70%;
  margin-top: -20rpx;
}

.aftersale .arrow image{
  width: 50rpx;
  height: 50rpx;
}

.aftersale .arrow{
  margin-top: -3rpx;
  margin-right: -40rpx;
}

.aftersale button::after, .feature_list button::after {
  border: none;
}

